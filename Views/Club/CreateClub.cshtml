@model Club
@{
    ViewData["Title"] = "CreateClub";
}
<h2>Create New Club</h2>

@Html.ActionLink("Show All Clubs", "All", "Club")

@using (Html.BeginForm("ClubCreated","Club", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(n => n.ClubName)
        @Html.TextBoxFor(n => n.ClubName, new { @class = "form-control" })
        @Html.ValidationMessageFor(n=>n.ClubName, "", new{ @class="text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Founded)
        @Html.TextBoxFor(a => a.Founded, new { @class = "form-control", @type="date" })
    </div>


    <button type="submit" class="btn btn-success">Create Club</button>
}

