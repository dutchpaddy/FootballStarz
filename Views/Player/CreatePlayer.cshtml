@model Player
@{
    ViewData["Title"] = "CreatePlayer";
}
<h2>Create a new Player</h2>

@Html.ActionLink("Show All Players", "AllPlayers", "Player")

@using (Html.BeginForm("PlayerCreated", "Player", FormMethod.Post))
            {
    <div class="form-group">
        @Html.LabelFor(n => n.PlayerName)
        @Html.TextBoxFor(n => n.PlayerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.PlayerName, "", new { @class = "text-danger" })
    </div>

 
    <div class="form-group">
        @Html.LabelFor(n => n.BirthDate)
        @Html.TextBoxFor(b => b.BirthDate, new { @class = "form-control", @type="date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(n => n.Nationality)
        @Html.TextBoxFor(g => g.Nationality, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Nationality, "", new { @class = "text-danger" })


    </div>

    <button type="submit" class="btn btn-success">Create Player</button>

}

